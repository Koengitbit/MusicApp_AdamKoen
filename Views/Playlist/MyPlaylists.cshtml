@model MusicApp_AdamKoen.ViewModels.IndexViewModel

<h1>My Playlists</h1>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Public</th>
        <th>Created At</th>
    </tr>
@foreach (var playlist in Model.MyPlaylists)
{
        <tr>
            <td>
                <a asp-action="Details" asp-controller="Playlist" asp-route-id="@playlist.Id">
                    @playlist.Name
                </a>
            </td>
            <td>@(playlist.IsPublic ? "Yes" : "No")</td>
            <td>@playlist.CreatedAt.ToShortDateString()</td>
        </tr>
    }
</table>